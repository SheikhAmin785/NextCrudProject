 @model NextCrudProject.Models.Employee

@{
    ViewData["Title"] = "Edit";
}
<div class="container">

    <div class="row">

        <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header">
                <h1 class="text-center text-primary">Edit Employee</h1>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Edit">

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input type="hidden" asp-for="Email" />
                        <input type="text" asp-for="Email" class="form-control"
                               placeholder="Enter Employee Email" />


                    </div>
                    <div class="form-group">
                        <label asp-for="Address"></label>
                        <input type="text" asp-for="Address" class="form-control"
                               placeholder="Enter Employee Address" />
                    </div>
                    <div class="form-group">
                        <label asp-for="phone"></label>
                        <input type="text" asp-for="phone" class="form-control"
                               placeholder="Enter Employee phone" />
                    </div>
                    <div class="form-group">
                        <label asp-for="salary"></label>
                        <input type="text" asp-for="salary" class="form-control"
                               placeholder="Enter Employee Salary" />
                    </div>
                    <div class="form-group">
                        <input type="submit" style="height:30px;width:100px" value="Submit" class="btn btn-sm btn-outline-success float-right" />
                    </div>
                </form>

            </div>
        </div>

    </div>
   </div>
   </div>
